// https://zed.dev/docs/configuring-languages
{
    "project_name": "Wox",
    "languages": {
        "Python": {
            "tab_size": 4,
            "formatter": "language_server",
            "language_servers": [
                "basedpyright",
                "ty",
                "pylsp",
                "!pyright",
                "..."
            ],
            "format_on_save": "off"
        },
        "YAML": {
            "tab_size": 2
        },
        "TOML": {
            "tab_size": 2
        }
    },
    "lsp": {
