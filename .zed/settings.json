        "pylsp": {
            "binary": {
                "path": "d:/apps/utils/ergo/wox/plugins/everywox/.venv.nt/scripts/pylsp.exe",
                "arguments": [],
            },
        },
        "ruff": {
            "binary": {
                "path": "d:/apps/utils/ergo/wox/plugins/everywox/.venv.nt/scripts/ruff.exe",
                "arguments": ["server"]
            }
        },
        "ty": {
            "binary": {
                "path": "d:/apps/utils/ergo/wox/plugins/everywox/.venv.nt/scripts/ty.exe",
                "arguments": ["server"]
            }
        },
        "basedpyright": {
            "binary": {
                "path": "d:/apps/utils/ergo/wox/plugins/everywox/.venv.nt/scripts/basedpyright-langserver.exe",
                "arguments": ["--stdio"]
            },
            "settings": {
                "pythonVersion": "3.12",
                "basedpyright.analysis": {
                    "typeCheckingMode": "all",
                    "diagnosticMode": "workspace",
                    "inlayHints.callArgumentNames": true,
                    "diagnosticSeverityOverrides": {
                        "reportAny": false,
                        "reportCallInDefaultInitializer": false,
                        "reportDuplicateImport": "information",
                        "reportExplicitAny": false,
                        "reportImplicitStringConcatenation": false,
                        "reportIncompatibleVariableOverride": false,
                        "reportMissingParameterType": false,
                        "reportUnknownArgumentType": false,
                        "reportUnknownMemberType": false,
                        "reportUnknownParameterType": false,
                        "reportUnknownVariableType": false,
                        "reportUnusedCallResult": false,
                        "reportUnusedImport": "information",
                        "reportUnusedVariable": "warning"
                    },
                    "enableExperimentalFeatures": true,
                    "logLevel": "Information"
                }
            }
        }
    }
}
